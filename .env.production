# Variables d'environnement pour la production Railway + PlanetScale

# Mode de production
APP_ENV=prod
APP_DEBUG=false

# Clé secrète - À CHANGER pour votre déploiement !
APP_SECRET=your-super-secret-key-change-this-in-railway

# Base de données PlanetScale
# Ces variables seront configurées depuis l'interface Railway
DATABASE_URL="mysql://username:password@host:port/database_name?sslmode=require"

# Configuration CORS pour Netlify
CORS_ALLOW_ORIGIN=https://votre-app.netlify.app

# JWT Configuration
JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
JWT_PASSPHRASE=your-jwt-passphrase

# Logs
APP_LOG_LEVEL=error

# Mailer (optionnel)
MAILER_DSN=null://null

# Cache Redis (optionnel pour Railway)
REDIS_URL=redis://localhost:6379